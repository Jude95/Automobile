<?xml version="1.0" encoding="utf-8"?>
<com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="56dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="必填项"
                android:background="#20ff8800"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="车型"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="点击选择车型"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="名字"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入车款名字"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="选填项"
                android:background="#20ff8800"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="功率"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_power"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入车款功率描述"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="排量"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_displacement"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入车款排量描述"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="汽缸"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_cylinders"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入汽缸数量"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="阀门"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_valve"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入阀门数量"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="车身结构"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_structure"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请选择车身结构"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="驱动方式"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_drive"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请选择驱动方式"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="发动机"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_engine"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入发动机"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="燃料"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_fuel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入燃料"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="供油方式"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_fuel_feed"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请选择供油方式"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="泰多克编码"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_tecdoc"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入泰多克编码"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="发动机编号"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_engine_code"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入发动机编号"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="生产时间"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入生产时间"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="技术排量"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_displacement_tech"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入技术排量"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:layout_height="match_parent"
                    android:text="关键字"
                    android:gravity="center"
                    style="@style/Base.TextAppearance.AppCompat.Body1"/>

                <TextView
                    android:id="@+id/tv_word"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:tag="请输入搜索关键字"
                    android:paddingRight="16dp"
                    android:gravity="center_vertical|right"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</com.jude.fitsystemwindowlayout.FitSystemWindowsLinearLayout>